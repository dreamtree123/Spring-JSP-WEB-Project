 <mapper namespace="adminMapper"> <!-- MemberDAO, GoodsDAO에서도 dao->adminMapper로 변경  -->
 
 	<!-- 관리자+회원) 헬스용품 전체 조회 -->
 	<select id="HealthGoodsSelect" resultType="com.hwf.model.GoodsDTO">
 		select * from healthgoods order by healthgoodsId
 	</select>
 	
 	<!-- 관리자+회원) 헬스식품 전체 조회 -->
 	<select id="HealthFoodSelect" resultType="com.hwf.model.GoodsDTO">
 		select * from healthfood order by hfId
 	</select>
 	
 	<!-- 관리자+회원) 영양제 전체 조회 -->
 	<select id="NutrientsSelect" resultType="com.hwf.model.GoodsDTO">
 		select * from nutrients order by nutrientsId
 	</select>
 	
 	
 	
 	<!-- 관리자) 헬스용품 등록 -->
 	<insert id="AdminHealthGoodsInsert" parameterType="dto">
 		insert into healthgoods(healthGoodsId, healthGoodsName, healthGoodsPrice, healthGoodsCategory, healthGoodsImg, healthGoodsDetail, Link)
 		values(healthgoods_id_seq.nextval, #{healthGoodsName}, #{healthGoodsPrice}, #{healthGoodsCategory}, #{healthGoodsImg}, #{healthGoodsDetail}, #{healthGoodsLink})
 	</insert>
 	
 	<!-- 관리자) 헬스식품 등록 -->
 	<insert id="AdminHealthFoodInsert" parameterType="dto">
 		insert into healthfood(hfId, hfName, hfPrice, hfCategory, hfImg, hfDetail, hfDom, Link)
 		values(hf_id_seq.nextval, #{hfName}, #{hfPrice}, #{hfCategory}, #{hfImg}, #{hfDetail}, to_date(#{hfDom},'yyyy.mm.dd hh24:mi:SS'), #{healthFoodLink})
 	</insert>
 	
 	
 	
