<?xml version="1.0" encoding="UTF-8"?>

<!-- sqlMapConfig.xml : DB 연결 및 mapper 위치 설정 --> 
	
<!-- mybatis dtd 추가해야 <enviroments> 등등 sub elemnet 나옴 -->
<!DOCTYPE configuration 
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- Properties 파일 설정 -->
	<properties resource="com/hwf/config/oracledb.properties" />

	<!-- Alias 설정 (별칭 지정) -->
	<typeAliases>
		<typeAlias alias="dto" type="com.hwf.model.MemberDTO" />
	</typeAliases>

	<!-- DataSource (커넥션 풀) 설정 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			
			<dataSource type="POOLED"> <!-- 커넥션 풀 -->
			
				<!-- oracledb.properties에서의 key,value 맵핑 -->
				<property name="driver" value="${driver}" />  <!-- <property name="driver" value="oracle.jdbc.driver.OracleDriver" />  -->
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
				
			</dataSource>
			
		</environment>
	</environments>

	<!-- SQL Mapper 설정 -->
	<mappers>
		<mapper resource="sqlMapper/admin-mapper.xml" />
	</mappers>
	
</configuration>