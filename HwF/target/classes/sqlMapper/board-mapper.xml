			 select * from healthfood where link = #{keyvalue}

			<!-- 합치면 column은 inbody / keyvalue = memberid -->

<!-- 			select * from healthfood where link = (select link from #{column}
			where memberid = ${keyvalue}) -->

		</if>
	</select>

	<select id="suverysearchingNutrients"
		parameterType="hashMap" resultType="recommend">
		
		
		<if test="column != null">
		select * from Nutrients where link = #{keyvalue}	

			<!-- 합치면 column은 suvery / keyvalue = memberid -->
			<!-- select * from Nutrients where link = (select link from #{column} 
				where memberid = ${keyvalue}) -->
		</if>
	</select>

	<select id="inbodysearchingNutrients"
		parameterType="hashMap" resultType="recommend">

		<if test="column != null">
			select * from Nutrients where link = #{keyvalue}

			
			<!-- 합치면 column은 inbody / keyvalue = memberid -->
