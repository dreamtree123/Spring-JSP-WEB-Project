			(select link from #{column} where
			memberid = ${keyvalue}) -->
			

<!-- 			select * from Nutrients where link =
			(select link from #{column} where
			memberid = ${keyvalue}) -->
		</if>
	</select>



	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		DELETE FROM QnA WHERE qnaid = #{qnaid}
	</delete>

	<!-- 세부사항 -->
	<select id="detailList" resultType="qnadto" parameterType="int">
		select * from QnA where qnaid = #{qnaid}
	</select>

	<!-- 수정 -->
	<update id="update" parameterType="qnadto">
		UPDATE QnA
		SET qnatitle=#{qnatitle} , qnacontent=#{qnacontent}
		WHERE qnaid = #{qnaid}
	</update>

	<!-- 부분 탐색(품목별 탐색하게 할 것 / 게시글이랑 search에 적용필요) -->
	<select id="selectSearch2" parameterType="hashMap"
		resultType="qnadto">
		SELECT * FROM QnA
		<where>
			<if test="qnatitle != null">
				qnatitle = #{keyvalue}
			</if>
			<if test="qnacontent != null">
				or qnacontent = #{keyvalue}
			</if>
			<if test="memberid != null">
				or memberid = #{keyvalue}
			</if>
		</where>
	</select>





